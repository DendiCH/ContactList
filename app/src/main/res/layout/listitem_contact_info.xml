<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="15dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/listitem_head_portrait"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/listitem_contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/listitem_head_portrait"
        android:layout_alignTop="@+id/listitem_head_portrait"
        android:textSize="20sp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/listitem_contacts_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/listitem_head_portrait"
        android:layout_alignBottom="@+id/listitem_head_portrait"
        android:maxLines="1"
        android:textSize="14sp"/>

</RelativeLayout>